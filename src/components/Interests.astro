  {
    category: "Gaming",
    icon: "🎮",
    description: "Enthusiastic gamer who enjoys both competitive and co-op games across various genres.",
    items: [
      { name: "PC Gaming", icon: "🖥️" },
      { name: "Strategy Games", icon: "💥" },
      { name: "FPS Games", icon: "🎧" },
      { name: "Esports", icon: "🏆" }
    ],
    color: "from-purple-500 to-pink-500"
  },
  {
    category: "Technology",
    icon: "💻",
    description: "Always excited about the latest tech trends, from building computers to exploring cutting-edge technology.",
    items: [
      { name: "PC Building", icon: "🔨" },
      { name: "Custom Keyboards", icon: "⌨️" },
      { name: "Tech Reviews", icon: "📱" },
      { name: "Innovation", icon: "🚀" }
    ],
    color: "from-blue-500 to-cyan-500"
  }
