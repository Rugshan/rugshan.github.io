---
// Skills section component
const skillCategories = [
  {
    name: "Salesforce",
    skills: [
      { name: "Apex", icon: "⚡" },
      { name: "Lightning Web Components", icon: "⚡" },
      { name: "OmniStudio", icon: "📝" },
      { name: "Flows", icon: "🖥️" },
      { name: "VisualForce", icon: "📄" },
      { name: "Salesforce Platform", icon: "☁️" },
    ]
  },
  {
    name: "Programming",
    skills: [
      { name: "Apex", icon: "⚡" },
      { name: "Python", icon: "🐍" },
      { name: "Java", icon: "☕" },
      { name: "REST APIs", icon: "🔌" },
      { name: "JavaScript", icon: "⚡" },
      { name: "HTML/CSS", icon: "🌐" },
    ]
  },
  /*{
    name: "Frameworks & Libraries",
    skills: [
      { name: "React", icon: "⚛️" },
      { name: "Node.js", icon: "🟢" },
      { name: "Express.js", icon: "🚂" },
      { name: "Next.js", icon: "⚡" },
      { name: "Tailwind CSS", icon: "🎨" },
      { name: "Bootstrap", icon: "🎯" }
    ]
  },*/
  {
    name: "Databases & Tools",
    skills: [
      { name: "MySQL", icon: "🗃️" },
      { name: "SQL / SOQL", icon: "🗄️" },
      { name: "ETL", icon: "⚙️" },
      { name: "VS Code", icon: "💻" },
      { name: "Postman", icon: "📮" }
    ]
  },
  {
    name: "Cloud & DevOps",
    skills: [
      { name: "AWS", icon: "☁️" },
      { name: "Git/GitHub", icon: "📚" },
      { name: "CI/CD", icon: "🚀" },
      { name: "Linux/Bash", icon: "🐧" },
    ]
  },
  
];

const softSkills = [
  { name: "Problem Solving", icon: "🧩" },
  { name: "Critical Thinking", icon: "💭" },
  { name: "Team Collaboration", icon: "🤝" },
  { name: "Leadership", icon: "🗣️" },
  { name: "Continuous Learning", icon: "📖" },
  { name: "Communication", icon: "💬" },
  { name: "System Integration", icon: "🔗" },
  { name: "Agile Development", icon: "🔄" }
];
---

<section id="skills" class="py-20 bg-white dark:bg-dark-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Skills & Expertise
      </h2>
      <div class="w-24 h-1 bg-primary-600 mx-auto mb-6"></div>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        A comprehensive overview of my technical skills, tools, and methodologies that I've developed 
        through academic projects, personal development, and continuous learning.
      </p>
    </div>

    <!-- Technical Skills -->
    <div class="grid lg:grid-cols-2 gap-12 mb-16">
      {skillCategories.map((category, categoryIndex) => (
        <div 
          class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6"
          data-aos={categoryIndex % 2 === 0 ? "fade-right" : "fade-left"}
          data-aos-delay={categoryIndex * 100}
        >
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
            <span class="mr-3">{category.icon || "💻"}</span>
            {category.name}
          </h3>
          
          <div class="grid grid-cols-2 gap-3">
            {category.skills.map((skill, skillIndex) => (
              <div 
                class="flex items-center space-x-2 p-3 bg-white dark:bg-dark-700 rounded-lg border border-gray-200 dark:border-dark-600 hover:border-primary-300 dark:hover:border-primary-600 transition-colors duration-300"
                data-aos="fade-up"
                data-aos-delay={skillIndex * 50}
              >
                <span class="text-lg">{skill.icon}</span>
                <span class="text-gray-700 dark:text-gray-300 font-medium text-sm">
                  {skill.name}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Soft Skills -->
    <div class="text-center mb-12" data-aos="fade-up">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        Soft Skills & Personal Qualities
      </h3>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16" data-aos="fade-up">
      {softSkills.map((skill, index) => (
        <div 
          class="bg-gray-50 dark:bg-dark-800 rounded-lg p-6 text-center hover:bg-gray-100 dark:hover:bg-dark-700 transition-colors duration-300 transform hover:-translate-y-1"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="text-4xl mb-4">{skill.icon}</div>
          <h4 class="text-lg font-semibold text-gray-900 dark:text-white">
            {skill.name}
          </h4>
        </div>
      ))}
    </div>

    <!-- Learning Journey -->
    <div class="bg-gradient-to-r from-primary-50 to-primary-100 dark:from-primary-900 dark:to-primary-800 rounded-2xl p-8" data-aos="fade-up">
      <div class="text-center">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          Continuous Learning Journey
        </h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
          I'm constantly expanding my skill set through professional experience, online courses, and hands-on projects. 
          Currently focusing on cloud technologies, system integration, and web apps.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <div class="flex items-center space-x-2 bg-white dark:bg-dark-700 px-4 py-2 rounded-full shadow-sm">
            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Currently Learning</span>
          </div>
          <div class="flex items-center space-x-2 bg-white dark:bg-dark-700 px-4 py-2 rounded-full shadow-sm">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Cloud Technologies</span>
          </div>
          <div class="flex items-center space-x-2 bg-white dark:bg-dark-700 px-4 py-2 rounded-full shadow-sm">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">System Integration</span>
          </div>
          <div class="flex items-center space-x-2 bg-white dark:bg-dark-700 px-4 py-2 rounded-full shadow-sm">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Web Apps</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16" data-aos="fade-up">
      <p class="text-gray-600 dark:text-gray-300 mb-6">
        Interested in my technical background or want to discuss specific technologies?
      </p>
      <a 
        href="#contact" 
        class="inline-flex items-center px-8 py-3 bg-primary-600 hover:bg-primary-700 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
      >
        Let's Discuss
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
